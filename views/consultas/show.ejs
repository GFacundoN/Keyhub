<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | KeyHub</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container py-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <!-- Encabezado -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h1 class="mb-0"><i class="bi bi-inbox"></i> <%= title %></h1>
          <a href="/consultas" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
          </a>
        </div>

        <!-- Tarjeta de Detalle -->
        <div class="card shadow-sm">
          <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="mb-0">Consulta #<%= consulta.id %></h5>
              <% if (consulta.estado === 'PENDIENTE') { %>
                <span class="badge bg-warning">Pendiente</span>
              <% } else if (consulta.estado === 'ATENDIDA') { %>
                <span class="badge bg-success">Atendida</span>
              <% } else { %>
                <span class="badge bg-secondary">Cancelada</span>
              <% } %>
            </div>
          </div>
          <div class="card-body">
            <!-- Información del Cliente -->
            <div class="mb-4">
              <h6 class="text-muted mb-3"><i class="bi bi-person-circle"></i> Información del Cliente</h6>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <strong>Nombre:</strong><br>
                  <%= consulta.nombre %>
                </div>
                <div class="col-md-6 mb-3">
                  <strong>Email:</strong><br>
                  <a href="mailto:<%= consulta.email %>"><%= consulta.email %></a>
                </div>
                <div class="col-md-6 mb-3">
                  <strong>Teléfono:</strong><br>
                  <a href="tel:<%= consulta.telefono %>"><%= consulta.telefono %></a>
                </div>
                <div class="col-md-6 mb-3">
                  <strong>Fecha de Consulta:</strong><br>
                  <%= new Date(consulta.fecha_consulta).toLocaleString('es-AR') %>
                </div>
              </div>
            </div>

            <hr>

            <!-- Tipo de Consulta -->
            <div class="mb-4">
              <h6 class="text-muted mb-3"><i class="bi bi-tag"></i> Tipo de Consulta</h6>
              <% if (consulta.tipo_consulta === 'INFORMACION') { %>
                <span class="badge bg-info fs-6">Información</span>
              <% } else if (consulta.tipo_consulta === 'VISITA') { %>
                <span class="badge bg-primary fs-6">Visita</span>
              <% } else if (consulta.tipo_consulta === 'COTIZACION') { %>
                <span class="badge bg-success fs-6">Cotización</span>
              <% } else { %>
                <span class="badge bg-secondary fs-6">Otro</span>
              <% } %>
            </div>

            <hr>

            <!-- Inmueble Relacionado -->
            <% if (consulta.inmueble_id) { %>
              <div class="mb-4">
                <h6 class="text-muted mb-3"><i class="bi bi-house"></i> Inmueble Relacionado</h6>
                <div class="card">
                  <div class="card-body">
                    <% if (consulta.inmueble_direccion) { %>
                      <p class="mb-2"><strong>Dirección:</strong> <%= consulta.inmueble_direccion %></p>
                    <% } %>
                    <% if (consulta.inmueble_codigo) { %>
                      <p class="mb-2"><strong>Código:</strong> <%= consulta.inmueble_codigo %></p>
                    <% } %>
                    <a href="/inmuebles/<%= consulta.inmueble_id %>" class="btn btn-sm btn-outline-primary" target="_blank">
                      <i class="bi bi-box-arrow-up-right"></i> Ver Inmueble
                    </a>
                  </div>
                </div>
              </div>
              <hr>
            <% } %>

            <!-- Mensaje -->
            <div class="mb-4">
              <h6 class="text-muted mb-3"><i class="bi bi-chat-left-text"></i> Mensaje</h6>
              <div class="alert alert-light">
                <%= consulta.mensaje %>
              </div>
            </div>

            <hr>

            <!-- Actualizar Estado -->
            <div class="mb-3">
              <h6 class="text-muted mb-3"><i class="bi bi-pencil-square"></i> Actualizar Estado</h6>
              <form action="/consultas/<%= consulta.id %>/estado?_method=PUT" method="POST" class="row g-3">
                <div class="col-md-8">
                  <select name="estado" class="form-select" required>
                    <option value="PENDIENTE" <%= consulta.estado === 'PENDIENTE' ? 'selected' : '' %>>Pendiente</option>
                    <option value="ATENDIDA" <%= consulta.estado === 'ATENDIDA' ? 'selected' : '' %>>Atendida</option>
                    <option value="CANCELADA" <%= consulta.estado === 'CANCELADA' ? 'selected' : '' %>>Cancelada</option>
                  </select>
                </div>
                <div class="col-md-4">
                  <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-check-circle"></i> Actualizar
                  </button>
                </div>
              </form>
            </div>
          </div>

          <div class="card-footer text-muted">
            <div class="d-flex justify-content-between align-items-center">
              <small>
                <i class="bi bi-clock"></i> 
                Creada: <%= new Date(consulta.created_at).toLocaleString('es-AR') %>
              </small>
              <% if (consulta.updated_at && consulta.updated_at !== consulta.created_at) { %>
                <small>
                  <i class="bi bi-arrow-clockwise"></i> 
                  Actualizada: <%= new Date(consulta.updated_at).toLocaleString('es-AR') %>
                </small>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Acciones Adicionales -->
        <div class="mt-3 d-flex gap-2">
          <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#responderModal">
            <i class="bi bi-envelope"></i> Responder por Email
          </button>
          <form action="/consultas/<%= consulta.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-outline-danger" 
                    onclick="return confirm('¿Está seguro de eliminar esta consulta?')">
              <i class="bi bi-trash"></i> Eliminar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal para Responder -->
  <div class="modal fade" id="responderModal" tabindex="-1" aria-labelledby="responderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="responderModalLabel">
            <i class="bi bi-envelope-fill"></i> Responder a <%= consulta.nombre %>
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="alert alert-info">
            <strong><i class="bi bi-info-circle"></i> Para:</strong> <%= consulta.email %>
          </div>
          
          <form id="responderForm">
            <div class="mb-3">
              <label for="mensaje" class="form-label">Mensaje *</label>
              <textarea 
                class="form-control" 
                id="mensaje" 
                name="mensaje" 
                rows="8" 
                required
                placeholder="Escribe tu respuesta aquí..."></textarea>
              <small class="text-muted">
                El cliente recibirá este mensaje en su email registrado.
              </small>
            </div>

            <div id="alertContainer"></div>

            <div class="d-flex gap-2 justify-content-end">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <i class="bi bi-x-circle"></i> Cancelar
              </button>
              <button type="submit" id="enviarBtn" class="btn btn-primary">
                <span id="btnText">
                  <i class="bi bi-send"></i> Enviar Respuesta
                </span>
                <span id="btnLoader" class="d-none">
                  <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                  Enviando...
                </span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.getElementById('responderForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const enviarBtn = document.getElementById('enviarBtn');
      const btnText = document.getElementById('btnText');
      const btnLoader = document.getElementById('btnLoader');
      const alertContainer = document.getElementById('alertContainer');
      const mensaje = document.getElementById('mensaje').value;
      
      // Limpiar alertas previas
      alertContainer.innerHTML = '';
      
      // Deshabilitar botón y mostrar carga
      enviarBtn.disabled = true;
      btnText.classList.add('d-none');
      btnLoader.classList.remove('d-none');
      
      try {
        const response = await fetch('/consultas/<%= consulta.id %>/responder', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ mensaje })
        });
        
        const result = await response.json();
        
        if (result.success) {
          // Mostrar alerta de éxito
          alertContainer.innerHTML = `
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <i class="bi bi-check-circle-fill"></i> ${result.message}
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          `;
          
          // Limpiar formulario
          document.getElementById('mensaje').value = '';
          
          // Cerrar modal después de 2 segundos
          setTimeout(() => {
            const modal = bootstrap.Modal.getInstance(document.getElementById('responderModal'));
            modal.hide();
            
            // Recargar página para ver estado actualizado
            window.location.reload();
          }, 2000);
        } else {
          // Mostrar error
          alertContainer.innerHTML = `
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <i class="bi bi-exclamation-triangle-fill"></i> ${result.message}
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          `;
          
          // Restaurar botón
          enviarBtn.disabled = false;
          btnText.classList.remove('d-none');
          btnLoader.classList.add('d-none');
        }
      } catch (error) {
        console.error('Error:', error);
        alertContainer.innerHTML = `
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> Error de conexión. Por favor, intenta nuevamente.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        `;
        
        // Restaurar botón
        enviarBtn.disabled = false;
        btnText.classList.remove('d-none');
        btnLoader.classList.add('d-none');
      }
    });
  </script>
</body>
</html>