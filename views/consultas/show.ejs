<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | KeyHub</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container py-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <!-- Encabezado -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h1 class="mb-0"><i class="bi bi-inbox"></i> <%= title %></h1>
          <a href="/consultas" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
          </a>
        </div>

        <!-- Tarjeta de Detalle -->
        <div class="card shadow-sm">
          <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="mb-0">Consulta #<%= consulta.id %></h5>
              <% if (consulta.estado === 'PENDIENTE') { %>
                <span class="badge bg-warning">Pendiente</span>
              <% } else if (consulta.estado === 'ATENDIDA') { %>
                <span class="badge bg-success">Atendida</span>
              <% } else { %>
                <span class="badge bg-secondary">Cancelada</span>
              <% } %>
            </div>
          </div>
          <div class="card-body">
            <!-- Información del Cliente -->
            <div class="mb-4">
              <h6 class="text-muted mb-3"><i class="bi bi-person-circle"></i> Información del Cliente</h6>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <strong>Nombre:</strong><br>
                  <%= consulta.nombre %>
                </div>
                <div class="col-md-6 mb-3">
                  <strong>Email:</strong><br>
                  <a href="mailto:<%= consulta.email %>"><%= consulta.email %></a>
                </div>
                <div class="col-md-6 mb-3">
                  <strong>Teléfono:</strong><br>
                  <a href="tel:<%= consulta.telefono %>"><%= consulta.telefono %></a>
                </div>
                <div class="col-md-6 mb-3">
                  <strong>Fecha de Consulta:</strong><br>
                  <%= new Date(consulta.fecha_consulta).toLocaleString('es-AR') %>
                </div>
              </div>
            </div>

            <hr>

            <!-- Tipo de Consulta -->
            <div class="mb-4">
              <h6 class="text-muted mb-3"><i class="bi bi-tag"></i> Tipo de Consulta</h6>
              <% if (consulta.tipo_consulta === 'INFORMACION') { %>
                <span class="badge bg-info fs-6">Información</span>
              <% } else if (consulta.tipo_consulta === 'VISITA') { %>
                <span class="badge bg-primary fs-6">Visita</span>
              <% } else if (consulta.tipo_consulta === 'COTIZACION') { %>
                <span class="badge bg-success fs-6">Cotización</span>
              <% } else { %>
                <span class="badge bg-secondary fs-6">Otro</span>
              <% } %>
            </div>

            <hr>

            <!-- Inmueble Relacionado -->
            <% if (consulta.inmueble_id) { %>
              <div class="mb-4">
                <h6 class="text-muted mb-3"><i class="bi bi-house"></i> Inmueble Relacionado</h6>
                <div class="card">
                  <div class="card-body">
                    <% if (consulta.inmueble_direccion) { %>
                      <p class="mb-2"><strong>Dirección:</strong> <%= consulta.inmueble_direccion %></p>
                    <% } %>
                    <% if (consulta.inmueble_codigo) { %>
                      <p class="mb-2"><strong>Código:</strong> <%= consulta.inmueble_codigo %></p>
                    <% } %>
                    <a href="/inmuebles/<%= consulta.inmueble_id %>" class="btn btn-sm btn-outline-primary" target="_blank">
                      <i class="bi bi-box-arrow-up-right"></i> Ver Inmueble
                    </a>
                  </div>
                </div>
              </div>
              <hr>
            <% } %>

            <!-- Mensaje -->
            <div class="mb-4">
              <h6 class="text-muted mb-3"><i class="bi bi-chat-left-text"></i> Mensaje</h6>
              <div class="alert alert-light">
                <%= consulta.mensaje %>
              </div>
            </div>

            <hr>

            <!-- Actualizar Estado -->
            <div class="mb-3">
              <h6 class="text-muted mb-3"><i class="bi bi-pencil-square"></i> Actualizar Estado</h6>
              <form action="/consultas/<%= consulta.id %>/estado?_method=PUT" method="POST" class="row g-3">
                <div class="col-md-8">
                  <select name="estado" class="form-select" required>
                    <option value="PENDIENTE" <%= consulta.estado === 'PENDIENTE' ? 'selected' : '' %>>Pendiente</option>
                    <option value="ATENDIDA" <%= consulta.estado === 'ATENDIDA' ? 'selected' : '' %>>Atendida</option>
                    <option value="CANCELADA" <%= consulta.estado === 'CANCELADA' ? 'selected' : '' %>>Cancelada</option>
                  </select>
                </div>
                <div class="col-md-4">
                  <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-check-circle"></i> Actualizar
                  </button>
                </div>
              </form>
            </div>
          </div>

          <div class="card-footer text-muted">
            <div class="d-flex justify-content-between align-items-center">
              <small>
                <i class="bi bi-clock"></i> 
                Creada: <%= new Date(consulta.created_at).toLocaleString('es-AR') %>
              </small>
              <% if (consulta.updated_at && consulta.updated_at !== consulta.created_at) { %>
                <small>
                  <i class="bi bi-arrow-clockwise"></i> 
                  Actualizada: <%= new Date(consulta.updated_at).toLocaleString('es-AR') %>
                </small>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Acciones Adicionales -->
        <div class="mt-3 d-flex gap-2">
          <a href="mailto:<%= consulta.email %>?subject=Re: Consulta #<%= consulta.id %>" class="btn btn-outline-primary">
            <i class="bi bi-envelope"></i> Responder por Email
          </a>
          <form action="/consultas/<%= consulta.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-outline-danger" 
                    onclick="return confirm('¿Está seguro de eliminar esta consulta?')">
              <i class="bi bi-trash"></i> Eliminar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>