<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | KeyHub</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container py-5">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
        <li class="breadcrumb-item"><a href="/usuarios">Usuarios</a></li>
        <li class="breadcrumb-item active"><%= usuario.username %></li>
      </ol>
    </nav>

    <div class="row">
      <div class="col-lg-4">
        <div class="card shadow mb-4">
          <div class="card-body text-center">
            <% if (usuario.foto_perfil) { %>
              <div class="d-inline-block position-relative mb-3">
                <img src="<%= usuario.foto_perfil %>" alt="Foto de perfil" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover; object-position: center; border: 4px solid #0d6efd; display: block;">
              </div>
            <% } else { %>
              <i class="bi bi-person-circle text-primary" style="font-size: 5rem;"></i>
            <% } %>
            <h3 class="mt-3"><%= usuario.email %></h3>
            <% if (usuario.is_active || usuario.activo) { %>
              <span class="badge bg-success">Activo</span>
            <% } else { %>
              <span class="badge bg-danger">Inactivo</span>
            <% } %>
          </div>
        </div>

        <div class="card shadow">
          <div class="card-body">
            <h5 class="card-title">Acciones</h5>
            <div class="d-grid gap-2">
              <a href="/usuarios/<%= usuario.id %>/edit" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Editar Perfil
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="card shadow mb-4">
          <div class="card-body">
            <h4 class="card-title mb-4">Información Personal</h4>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="text-muted small">Nombre</label>
                <p class="fw-bold"><%= usuario.nombre || 'No especificado' %></p>
              </div>
              <div class="col-md-6 mb-3">
                <label class="text-muted small">Apellido</label>
                <p class="fw-bold"><%= usuario.apellido || 'No especificado' %></p>
              </div>
              <div class="col-md-6 mb-3">
                <label class="text-muted small">DNI</label>
                <p class="fw-bold"><%= usuario.dni || 'No especificado' %></p>
              </div>
              <div class="col-md-6 mb-3">
                <label class="text-muted small">Teléfono</label>
                <p class="fw-bold"><%= usuario.telefono || 'No especificado' %></p>
              </div>
              <div class="col-md-6 mb-3">
                <label class="text-muted small">Email</label>
                <p class="fw-bold"><%= usuario.email %></p>
              </div>
              <div class="col-md-6 mb-3">
                <label class="text-muted small">Fecha de Registro</label>
                <p class="fw-bold"><%= usuario.fecha_creacion ? new Date(usuario.fecha_creacion).toLocaleDateString() : 'N/A' %></p>
              </div>
            </div>
          </div>
        </div>

        <% if (roles && roles.length > 0) { %>
          <div class="card shadow">
            <div class="card-body">
              <h4 class="card-title mb-4">Roles</h4>
              <div class="d-flex gap-2">
                <% roles.forEach(rol => { %>
                  <span class="badge bg-primary"><%= rol.nombre %></span>
                <% }); %>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
